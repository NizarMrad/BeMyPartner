
<body class="login-page">
<%= render "layouts/header" %>
 <div class="page-header">
   <div class="page-header-image" style="background-image:url(/assets/img2.jpg)"></div>
      <div class="container">
          <div class="col-md-4 content-center">
            <div class="card card-login card-plain">
             
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                
                  <div class="content">
                      <div class="input-group form-group-no-border input-lg">
                          <span class="input-group-addon">
                              <%= image_tag"at.png", class:"logo-form"%>
                          </span>
                                    
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                      </div>
                      <div class="input-group form-group-no-border input-lg">
                          <span class="input-group-addon">
                              <%= image_tag"lock.png", class:"logo-form"%>
                          </span>
                          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe" %>
                      </div>
                  </div>
                  <div class="footer text-center">
                      <%= f.submit "Se connecter", class:"btn btn-primary btn-round btn-lg btn-block" %>
                  </div>
                  <div class="pull-left">
                    <h6>
                      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                        <%= link_to "S'inscrire", new_registration_path(resource_name), class: "link" %><br />
                      <% end %>
                    </h6>
                  </div>
                  <div class="pull-right">
                    <h6>
                      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                          <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name), class: "link" %><br />
                      <% end %>
                    </h6>
                  </div>
              <% end %>
          
     </div>
  </div>
</div>
<%= devise_error_messages! %>
<%= render ("layouts/footer2") %>
</body>

