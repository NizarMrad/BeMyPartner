</br>

<li class="list-group-item" >
  <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 panel panel-default" data-conversation-id="<%= conversation.id %>">
    <div class="panel-heading">
      <%= link_to conversation.opposed_user(user).profile.name, '', class: 'toggle-window' %>
      <%= link_to "X", close_conversation_path(conversation), class: "btn btn-primary btn-round btn-sm  pull-right", remote: true, method: :get %>
    </div>
  
    <div class="panel-body" style="display: none;">
    <br/>
      <div class="messages-list">
        <ul class="messages-style">
          <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>
      </br>
      <form class="new_message">
        <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">
        <textarea name="body" class="form-control"></textarea>
        </br>
        <input type="submit" class="btn btn-primary" value="Send">
      </form>
    </div>
  </div>
</li>
