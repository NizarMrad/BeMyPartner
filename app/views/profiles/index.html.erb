<main class="container-section">
<%= render ("layouts/header") %>
    <div class="wrapper">
        <section class="container-section-banner">
            <div class="page-header page-header-small">
                <div class="page-header-image" data-parallax="true" style="background-image: url(<%= image_path("startup3.jpg") %>);"></div>
                <h1>Your profiles</h1>
            </div>
        </section>
    </div>
    <div class="porfile-content">
      <h6><%= link_to 'Home', root_path, class: "link" %></h6> 
    </div>
  <div class="tab-pane Followers" id="followers" role="tabpanel">
    <div class="container-fluid">
        <div class="row">
          <% @profiles.each do |profile| %>
          <div class="col-12 col-sm-6">
           <div class="card" > 
              <% if profile.avatar.attached? %>
              <%= image_tag profile.avatar, class: 'card-img-top', alt:"Card image cap", style: "max-width: ; max-height: 200px" %>
              <% else %>
              <%= image_tag "guy-2.jpg", class:'card-img-top', alt: "Card image cap" %>
              <% end %>
              <div class="card-block">
                  <img class="img-profile-folow" src="img/Friends/woman-1.jpg" alt="">
                    <h4><strong> <%= profile.skills %></strong> </h4>
                    </br>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>City :</strong>  <%= profile.city %></li>
              </ul>
                    </br>
              <p class="card-text"><strong> profile description:</strong>  <%= profile.description %></p>

              <div class="card-body">
                <%= link_to 'Show', profile , class:"btn btn-primary btn-round btn-sm"%>
              </div>
        </div>
      </div>
  </div>
          <% end %>
        </div>
    </div>
  </div>
  <%= render ("layouts/footer") %>
</main>