<main class="container-section">
<%= render ("layouts/header") %>
    <div class="wrapper">
        <section class="container-section-banner">
            <div class="page-header page-header-small">
                <div class="page-header-image" data-parallax="true" style="background-image: url('/assets/startup3.jpg');"></div>
                <h1>Profiles</h1>
            </div>
        </section>
    </div>
  <div class="tab-pane Followers" id="followers" role="tabpanel">
    <div class="container-fluid">
        <div class="row">
        <% @profiles.each do |profile| %>
          <div class="col-12 col-sm-6">
     <div class="card">
       <br/>
         <div class="card-block">
    <br/>
    <%= image_tag ('guy-1.jpg'), class:"img-profile-folow"  %>
    <h4>Juan Ramirez</h4>
      <%= profile.description %>
      <%= profile.skills %>
      <%= profile.user_id %>
      <br/>
      <%= link_to 'Show', profile , class:"btn btn-primary btn-round btn-sm"%>
         </div>
     </div>
          </div>
          <% end %>
        </div>
    </div>
  </div>
  <%= render ("layouts/footer") %>
</main>
                            